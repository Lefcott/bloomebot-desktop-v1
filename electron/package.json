{
  "name": "bloomebot-desktop",
  "version": "0.1.0",
  "private": true,
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/Lefcott/bloomebot-desktop-v1.git"
  },
  "dependencies": {
    "electron-is-dev": "^1.2.0",
    "esm": "^3.2.25",
    "robotjs": "^0.6.0",
    "rollbar": "^2.19.4",
    "update-electron-app": "^2.0.1"
  },
  "scripts": {
    "electron": "nodemon --watch . --exec electron .",
    "compile-win-old": "electron-packager . bloomebot-desktop --platform=win32 --arch=x64 --out-dir build/electron --prune --overwrite",
    "compile-win": "dotnet publish && electron-builder",
    "robotjs-rebuild": "npm rebuild --runtime=electron --target=9.3.2 --disturl=https://atom.io/download/atom-shell --abi=59"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "cmake-js": {
    "runtime": "electron",
    "runtimeVersion": "9.3.2"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "concurrently": "^5.3.0",
    "electron": "^9.3.2",
    "electron-builder": "^22.9.1",
    "electron-packager": "^15.1.0",
    "electron-rebuild": "^2.0.3",
    "eslint": "^6.6.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-config-strongloop": "^2.1.0",
    "eslint-plugin-flowtype": "^2.39.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-pug": "^1.2.2",
    "eslint-plugin-react": "^7.11.0",
    "husky": "^1.2.0",
    "prettier": "^2.1.1",
    "prettier-eslint": "^8.2.1",
    "wait-on": "^5.2.0"
  },
  "build": {
    "appId": "bloomebot-desktop",
    "files": [
      "dotnet/bin/Debug/netcoreapp3.1/publish/dotnet.exe"
    ]
  }
}
